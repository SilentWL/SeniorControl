<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <attr name="volumeStep" format="integer"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="defaultVolume" format="integer"/>
    <attr name="image" format="reference"/>
    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <attr name="stepDegrees" format="integer"/>
    <attr name="stepBlankDegrees" format="integer"/>

    <declare-styleable name="VolumeChangeControl">
        <attr name="volumeStep"/>
        <attr name="circleWidth"/>
        <attr name="defaultVolume"/>
        <attr name="image"/>
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="stepDegrees"/>
        <attr name="stepBlankDegrees"/>
    </declare-styleable>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wl="http://schemas.android.com/apk/res/com.seniorcontrol.administrator.customview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seniorcontrol.administrator.customview.MainActivity">

    <com.seniorcontrol.administrator.customview.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        wl:image="@mipmap/ic_launcher"
        wl:imageScaleType="center"
        wl:titleText="Hello World!"
        wl:titleTextColor0="#ff0000"
        wl:titleTextSize="30sp"/>

    <com.seniorcontrol.administrator.customview.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        wl:image="@mipmap/ic_launcher"
        wl:imageScaleType="center"
        wl:titleText="Hello World!"
        wl:titleTextColor0="#00ff00"
        wl:titleTextSize="20sp"/>


    <com.seniorcontrol.administrator.customview.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        wl:image="@drawable/test"
        wl:imageScaleType="center"
        wl:titleText="Image!"
        wl:titleTextColor0="#0000ff"
        wl:titleTextSize="12sp"/>
</LinearLayout>

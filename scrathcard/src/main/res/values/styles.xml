<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <attr name="BackImageId" format="reference"/>
    <attr name="ForeColor" format="color"/>
    <attr name="ShadowLineColor" format="color"/>
    <attr name="BackText" format="string"/>
    <attr name="BackTextSize" format="dimension"/>
    <attr name="BackTextColor" format="color"/>
    <attr name="ShadowLineCount" format="integer"/>
    <attr name="ShadowLineWidth" format="dimension"/>
    
    <declare-styleable name="ScrathCardView">
        <attr name="BackImageId"/>
        <attr name="ForeColor"/>
        <attr name="ShadowLineColor"/>
        <attr name="BackText"/>
        <attr name="BackTextSize"/>
        <attr name="BackTextColor"/>
        <attr name="ShadowLineCount"/>
        <attr name="ShadowLineWidth"/>
    </declare-styleable>
    
</resources>
